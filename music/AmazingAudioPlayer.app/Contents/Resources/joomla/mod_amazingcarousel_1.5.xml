<?xml version="1.0" encoding="utf-8"?>
<install type="module" version="1.5">
    <!-- Name of the Module -->
        <name>Amazing Carousel ID %CAROUSELID%</name> 
 
    <!-- Name of the Author -->
        <author>Magic Hills Pty Ltd</author> 
 
    <!-- Version Date of the Module -->
        <creationDate>2013-07-10</creationDate> 
 
    <!-- Copyright information -->
        <copyright>All rights reserved by Magic Hills Pty Ltd 2013.</copyright> 
 
    <!-- License Information -->
        <license>All rights reserved by Magic Hills Pty Ltd</license> 
 
    <!-- Author's email address -->
        <authorEmail>support@magichtml.com</authorEmail> 
 
    <!-- Author's website -->
        <authorUrl>http://amazingcarousel.com</authorUrl> 
 
    <!-- Module version number -->
        <version>1.0</version> 
 
    <!-- Description of what the module does -->
        <description>Amazing Carousel - Create Beautiful jQuery Image and Video Carousel</description>
 
    <!-- Listing of all files that should be installed for the module to function -->
        <files>
		<!-- The "module" attribute signifies that this is the main controller file -->
                <filename module="mod_amazingcarousel_%CAROUSELID%">mod_amazingcarousel_%CAROUSELID%.php</filename>
                <filename>index.html</filename>
                <folder>tmpl/</folder>
        </files>
 
    <!-- Optional parameters -->
	<params>
		<param name="is_second" type="radio" label="Is the Carousel second or after on the webpage? (Only change this when you have multiple Carousels on one webpage)" description="" default="0">
			<option value="0">No</option>
            <option value="1">Yes</option>
        </param>
	</params>
</install>